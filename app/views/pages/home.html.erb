<div class="jumbotron text-center">
  <h1>Welcome to home.</h1>
  <h3>there will be stuff here.</h3>
</div>
<div class="row">
  <% if user_signed_in? %>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Your Profile</h2>
        <% if current_user.profile %>
          <%= link_to "Edit Profile", edit_user_profile_path(current_user.id), class: "btn btn-default btn-lg btn-block" %><br>
          <%= link_to "View your profile", user_path(current_user.id), class: "btn btn-default btn-lg btn-block" %>
        <% else %>
          <p>Create a profile, and get connected!</p>
          <%= link_to "Create your profile", new_user_profile_path(current_user.id), class: "btn btn-default btn-lg btn-block" %>
        <% end -%>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">The Community</h2>
        <%= link_to "View Community discussions, projects and start newtorking!", "#", class: "btn btn-default btn-lg btn-block" %>
      </div>
    </div>
  <% else%>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">  
          Basic plan
        </h2>
        <div class="alert-success well">
          <h4>
            free!
          </h4>
        </div>
        <%= link_to "Sign Up!", new_user_registration_path(plan: @basic_plan.id), class:"btn btn-primary btn-block btn-lg" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">
          pro plan
        </h2>
        <div class="alert-error well">
          <h4>
            $10/month!
          </h4>
        </div>
        <%= link_to "Sign Up!", new_user_registration_path(plan: @pro_plan.id), class:"btn btn-primary btn-block btn-lg" %>
      </div>
    </div>
  <% end -%>
</div>